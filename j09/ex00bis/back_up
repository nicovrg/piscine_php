					// i = parseInt(i);
					$('ballon').css('width', wid);
					$('ballon').css('color', color);

					if (i == 415)
						i = 200;
					else if(i < 420)
						i += 10;
					else
						i = 200;
					elmt.style.width = i + "px";
					elmt.style.height = i + "px";
